<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view_dot_indicator_middle"
        />

    <View
        android:id="@+id/view_dot_indicator_start"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/oval_onsurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view_dot_indicator_middle"
        app:layout_constraintTop_toTopOf="@id/view_dot_indicator_middle"
        app:layout_constraintHorizontal_chainStyle="packed"
        />
    <View
        android:id="@+id/view_dot_indicator_middle"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/oval_onsurface"
        app:layout_constraintStart_toEndOf="@id/view_dot_indicator_start"
        app:layout_constraintEnd_toStartOf="@id/view_dot_indicator_end"
        app:layout_constraintBottom_toTopOf="@id/btn_start_pomodoro"
        />
    <View
        android:id="@+id/view_dot_indicator_end"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/oval_onsurface"
        app:layout_constraintStart_toEndOf="@id/view_dot_indicator_middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_dot_indicator_middle"
        />

    <Button
        android:id="@+id/btn_start_pomodoro"
        style="@style/BaseButton.Outlined.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:text="@string/txt_start_pomodoro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_create_tasks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        />
    <Button
        android:id="@+id/btn_create_tasks"
        style="@style/BaseButton.Filled.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:text="@string/txt_create_daily_tasks"
        app:layout_constraintStart_toEndOf="@id/btn_start_pomodoro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>