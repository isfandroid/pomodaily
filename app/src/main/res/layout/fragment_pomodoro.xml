<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <Button
        android:id="@+id/btn_tasks"
        style="?attr/materialIconButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/ic_tasks"
        app:icon="@drawable/ic_tasks_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_stats"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        />
    <Button
        android:id="@+id/btn_stats"
        style="?attr/materialIconButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/txt_statistics"
        app:icon="@drawable/ic_stats_24"
        app:layout_constraintStart_toEndOf="@id/btn_tasks"
        app:layout_constraintEnd_toStartOf="@id/btn_settings"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/btn_settings"
        style="?attr/materialIconButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:contentDescription="@string/txt_settings"
        app:icon="@drawable/ic_settings_24"
        app:layout_constraintStart_toEndOf="@id/btn_stats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_timer"
        style="@style/Text.Bold.64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_tasks"
        app:layout_constraintBottom_toTopOf="@id/tv_message"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="25:00"
        />
    <TextView
        android:id="@+id/tv_message"
        style="@style/Text.Regular.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_timer"
        app:layout_constraintBottom_toTopOf="@id/btn_start_pause_resume"
        tools:text="Stay focused for 25 minutes"
        />

    <Button
        android:id="@+id/btn_restart"
        style="?attr/materialIconButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/ic_tasks"
        android:visibility="invisible"
        app:icon="@drawable/ic_restart_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_start_pause_resume"
        app:layout_constraintTop_toTopOf="@id/btn_start_pause_resume"
        app:layout_constraintBottom_toBottomOf="@id/btn_start_pause_resume"
        app:layout_constraintHorizontal_chainStyle="packed"
        />
    <Button
        android:id="@+id/btn_start_pause_resume"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="42dp"
        android:padding="16dp"
        android:contentDescription="@string/txt_statistics"
        app:icon="@drawable/ic_play_24"
        app:iconSize="32dp"
        app:layout_constraintStart_toEndOf="@id/btn_restart"
        app:layout_constraintEnd_toStartOf="@id/btn_skip_stop"
        app:layout_constraintTop_toBottomOf="@id/tv_message"
        app:layout_constraintBottom_toTopOf="@id/card_active_task"
        />
    <Button
        android:id="@+id/btn_skip_stop"
        style="?attr/materialIconButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/txt_settings"
        android:visibility="invisible"
        app:icon="@drawable/ic_skip_forward_24"
        app:layout_constraintStart_toEndOf="@id/btn_start_pause_resume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_start_pause_resume"
        app:layout_constraintBottom_toBottomOf="@id/btn_start_pause_resume"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_active_task"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="?attr/backgroundColor"
        android:visibility="gone"
        app:strokeColor="?attr/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_tasks_info"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_active_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >
            <TextView
                android:id="@+id/tv_active_task_title"
                style="@style/Text.SemiBold.16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_active_task_est_sessions"
                tools:text="Learn Jetpack Compose"
                />
            <TextView
                android:id="@+id/tv_active_task_est_sessions"
                style="@style/Text.SemiBold.16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="0/4"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_tasks_info"
        style="@style/Text.Regular.16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="No active task"
        />
</androidx.constraintlayout.widget.ConstraintLayout>