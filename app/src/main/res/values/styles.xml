<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--TYPOGRAPHY - BOLD - INTER-->
    <style name="Text.Bold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>
    <style name="Text.Bold.24" parent="Text.Bold">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Text.Bold.20" parent="Text.Bold">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Text.Bold.18" parent="Text.Bold">
        <item name="android:textSize">18sp</item>
    </style>

    <!--TYPOGRAPHY - SEMIBOLD - POPPINS-->
    <style name="Text.SmiBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>
    <style name="Text.SmiBold.24" parent="Text.SmiBold">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Text.SmiBold.20" parent="Text.SmiBold">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Text.SmiBold.18" parent="Text.SmiBold">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Text.SmiBold.16" parent="Text.SmiBold">
        <item name="android:textSize">16sp</item>
    </style>

    <!--TYPOGRAPHY - REGULAR - WORKSANS-->
    <style name="Text.Regular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>
    <style name="Text.Regular.16" parent="Text.Regular">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text.Regular.14" parent="Text.Regular">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.Regular.12" parent="Text.Regular">
        <item name="android:textSize">12sp</item>
    </style>

    <!--BUTTON - FILLED - PRIMARY-->
    <style name="BaseButton.Filled.Primary" parent="Widget.Material3.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/base_button_filled_background_primary</item>
        <item name="drawableTint">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">@style/Text.Regular.14</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--BUTTON - OUTLINED - PRIMARY-->
    <style name="BaseButton.Outlined.Primary" parent="Widget.Material3.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/base_button_outlined_background</item>
        <item name="drawableTint">@color/base_button_outlined_text_primary</item>
        <item name="strokeColor">@color/base_button_outlined_text_primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textAppearance">@style/Text.Regular.14</item>
        <item name="android:textColor">@color/base_button_outlined_text_primary</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--IMAGE - OVAL IMAGE-->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--IMAGE - ROUNDED IMAGE - 8 DP-->
    <style name="ShapeAppearanceOverlay.App.CornerSize8dp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>