<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed -->
    <item android:state_pressed="true" android:color="?attr/colorPrimaryVariant" />
    <!-- Focused -->
    <item android:state_focused="true" android:color="?attr/colorPrimaryVariant" />
    <!-- Hovered -->
    <item android:state_hovered="true" android:color="?attr/colorPrimaryVariant" />
    <!-- Disabled -->
    <item android:state_enabled="false" android:color="?attr/colorOnSurface" />
    <!-- Checked -->
    <item android:state_checked="true" android:color="?attr/colorOnPrimary" />
    <!-- Default (Enabled) -->
    <item android:color="?attr/colorPrimary" />
</selector>