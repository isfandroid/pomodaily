<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed -->
    <item android:state_pressed="true" android:color="?attr/colorPrimaryOverlay" />
    <!-- Focused -->
    <item android:state_focused="true" android:color="?attr/colorPrimaryOverlay" />
    <!-- Hovered -->
    <item android:state_hovered="true" android:color="?attr/colorPrimaryOverlay" />
    <!-- Disabled -->
    <item android:state_enabled="false" android:color="@android:color/transparent" />
    <!-- Checked -->
    <item android:state_checked="true" android:color="?attr/colorPrimary" />
    <!-- Default -->
    <item android:color="@android:color/transparent" />
</selector>